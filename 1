# include <iostream>
using namespace std;

int main() {
	setlocale(0, "");
	int num1;
	int num2;
	int num3;
	int num4=0;
	cout << "[1]Возвидение в квадрат,а затем в куб " << endl;
	cout << "[2]Нахождение среднего арифметического двух чисел" << endl;
	cout << "[3]Сортировка значения по возрастанию и убыванию" << endl;
	cout << "" << endl;
	cout << "Введите нужный вам пункт:";
	cin >> num1;
	system("cls");
	
		switch (num1) 
		{

		case 1:
			cout << "Введите число которое вам нужно преобразовать:";
			cin >> num1;
			num1 = num1 * num1;
			cout <<"Число возведенное в квадрат:"<<num1<<endl;
			num1 = num1 * num1 * num1;
			cout <<"Число возведенное в куб:"<< num1;
			break;
		case 2:
			cout << "Введите первое число:"<<endl;
			cin >> num1;
			cout << "Введите второе число:"<<endl;
			cin >> num2;
			num3 = (num1 + num2) / 2;
			cout << "Ответ:"<<num3;
			break;
		case 3:
			cout << "Введите диапозон чисел"<<endl;
			cout << "Введите начало диапозона:"<<endl;
			cin >> num1;
			cout << "Введите окончание диапозона:" << endl;
			cin >> num2;

			
			for (num1; num1 <= num2; num1++) {
				if (num1 % 2 == 0) {
					num4 += num1;
				}
			}
			
			cout << "Ответ:" << num4;
			break;
		default:
			cout << "Вы ввели некорректные данные";
			break;
	    }
		
	return 0;
}
